{
   "public": true,
   "functions": {
      "api/*.ts": {
         "includeFiles": "templates/**",
         "maxDuration": 5
      }
   },
   "rewrites": [
      {
         "source": "/",
         "destination": "/api/index"
      },
      {
         "source": "/t",
         "destination": "/api/topic/all"
      },
      {
         "source": "/t/:id",
         "destination": "/api/topic/single"
      },
      {
         "source": "/:slug",
         "destination": "/api/post"
      }
   ]
}
