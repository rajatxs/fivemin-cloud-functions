<style>
   main .page-topics-collection {
      display: grid;
      gap: 2rem;
      padding-top: 12px;
      padding-bottom: 12px;
      grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
   }
   main .page-topic-item {
      text-decoration: none;
      color: inherit;
   }
   main .page-topic-thumb {
      margin: 0;
      width: 100%;
      height: 300px;
      position: relative;
      border-radius: 12px;
      transition: box-shadow 120ms ease;
   }
   main .page-topic-thumb-image {
      width: inherit;
      height: inherit;
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
      border-radius: inherit;
   }
   main .page-topic-thumb-text {
      position: absolute;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      bottom: 0;
      left: 0;
      right: 0;
      height: 80px;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
      border-bottom-left-radius: inherit;
      border-bottom-right-radius: inherit;
      border-top-left-radius: 0;
      border-top-right-radius: 0;
      background-color: rgba(255, 255, 255, 0.9);
      transition: height 250ms ease, border-top-left-radius 150ms linear, border-top-right-radius 150ms linear;
   }
   main .page-topic-item:hover .page-topic-thumb,
   main .page-topic-item:focus .page-topic-thumb {
      box-shadow: rgba(100, 100, 111, 0.5) 0px 7px 29px 0px;
   }
   main .page-topic-item:hover .page-topic-thumb-text {
      border-top-left-radius: inherit;
      border-top-right-radius: inherit;
      height: 300px;
   }
   main .page-topic-item:focus .page-topic-thumb-text {
      text-decoration: underline;
   }
</style>

<main class="page-topics page-content-y-padding">
   <div class="page-topics-heading">
      <h1 class="page-title">Topics</h1>
      <p><%= postCount %> Posts</p>
   </div>

   <% if (topics.length === 0) { %> 
      <div>
         <p>No Topics</p>
      </div>
   <% } else { %>
   <div class="page-topics-collection">
      <% for(let topic of topics) { %>
         <a 
            href="<%= topic.topicUrl %>" 
            title="<%= topic.topicName %>" 
            class="page-topic-item"
            data-topic-id="<%= topic.topicId %>">
            <figure class="page-topic-thumb">
               <div 
                  class="page-topic-thumb-image" 
                  style="background-image: url('<%= topic.topicThumbUrl %>');"
                  aria-label="<%= topic.topicName %>">
               </div>
               <figcaption class="page-topic-thumb-text">
                  <h3><%= topic.topicName %></h3>
               </figcaption>
            </figure>
         </a>
      <% } %>
   </div>
   <% } %>
</main>
