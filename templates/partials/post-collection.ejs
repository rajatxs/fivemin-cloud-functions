<% if (posts.length === 0) { %>
<div class="partial-post-collection__empty-block">
   <br />
   <p>No Posts</p>
   <br />
   <br />
   <br />
</div>
<% } else { %>
<div class="partial-post-collection">
   <% for(let post of posts) { %>
      <a 
         href="<%= post.postUrl %>" 
         title="<%= post.postTitle %>" 
         class="partial-post-view__item">
         <figure class="partial-post-view__item-thumb">
            <div 
               class="partial-post-view__item-thumb-image" 
               style="background-image: url('<%= post.postCoverImageUrl %>')">
            </div>
            <figcaption class="partial-post-view__item-thumb-text">
               <% if (showTopic) { %>
               <strong aria-label="Article about <%= post.postTopic %>">
               <%= post.postTopic %>
               </strong>
               <% } %>
               <small>
                  <time><%= post.postPublishTime %></time>
               </small>
            </figcaption>
         </figure>

         <h3 class="partial-post-view__item-title">
            <%= post.postTitle %>
         </h3>
         <p 
            role="doc-subtitle" 
            aria-live="polite" 
            aria-relevant="additions text" 
            aria-atomic="true"
            class="partial-post-view__item-desc text-muted">
            <%= post.postDesc %>
         </p>
      </a>
   <% } %>
</div>
<% } %>
